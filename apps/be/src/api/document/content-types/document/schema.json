{
    "kind": "collectionType",
    "collectionName": "documents",
    "info": {
        "singularName": "document",
        "pluralName": "documents",
        "displayName": "Verse Block",
        "description": "XML Orchestration - Verse Blocks / Volumes"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "xmlFile": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "files"
            ]
        },
        "bookNumber": {
            "type": "integer"
        },
        "summary": {
            "type": "text"
        },
        "sectionRangeStart": {
            "type": "string"
        },
        "sectionRangeEnd": {
            "type": "string"
        },
        "criticalEditionAuthor": {
            "type": "string"
        },
        "verseBlockName": {
            "type": "string"
        },
        "book": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::book.book",
            "inversedBy": "verseBlocks"
        },
        "revisionHistory": {
            "type": "component",
            "repeatable": true,
            "component": "shared.revision-entry"
        },
        "comments": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::comment.comment",
            "mappedBy": "document"
        }
    }
}