{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Historical authors"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "isOriginal": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "bio": {
      "type": "richtext"
    },
    "languages": {
      "type": "json"
    },
    "works": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::catalog.catalog",
      "mappedBy": "authors"
    },
    "books": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::book.book",
      "mappedBy": "authors"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}