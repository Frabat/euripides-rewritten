{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Historical authors"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "original",
        "scholar"
      ],
      "default": "scholar",
      "required": true
    },
    "bio": {
      "type": "richtext"
    },
    "dateOfBirth": {
      "type": "date"
    },
    "placeOfBirth": {
      "type": "string"
    },
    "languages": {
      "type": "json"
    },
    "works": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::catalog.catalog",
      "mappedBy": "authors"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}