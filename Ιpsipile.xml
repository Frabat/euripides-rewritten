               <cit type="translation">
                  <quote xml:lang="it">
                     <sp>
                        <speaker>
                           <persName>Ipsipile</persName>
                        </speaker>
                        <lg>
                           <l n="1">
                              … Tracia…
                           </l>
                           <l n="2">
                              balzando sul mare in bonaccia
                           </l>
                           <l n="3">
                              per legare le gomene,
                           </l>
                           <l n="4">
                              Peleo, colui che Egina,
                           </l>
                           <l n="5">
                              figlia del fiume, generò,
                           </l>
                           <l n="6">
                              presso l’albero mediano
                           </l>
                           <l n="7">
                              la lira tracia dell’Asia {Orfeo}
                           </l>
                           <l n="8">
                              grida la triste elegia
                           </l>
                           <l n="9">
                              e canta comandi ai rematori
                           </l>
                           <l n="10">
                              per i lunghi colpi,
                           </l>
                           <l n="11">
                              ora per una navigazione rapida,
                           </l>
                           <l n="12">
                              ora per fare una pausa dai remi di pino.
                           </l>
                           <l n="13">
                              Queste cose, sì queste, desidero vedere,
                           </l>
                           <l n="14">
                              ma altri levino grida di dolore
                           </l>
                           <l n="15">
                              sulle pene dei Danai.
                           </l>
                           <l n="16">
                              <gap reason="lost"/>
                           </l>
                           <l n="17">
                              <gap reason="lost"/>
                           </l>
                        </lg>
